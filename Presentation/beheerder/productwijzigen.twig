{% block content %}

    {% if error %}
        <div class="panel panel-danger">

            <div class="panel-heading">Er is iets fout gelopen</div>
            <div class="panel-body">{{ error }}</div>

        </div>
    {% endif %}

    <form action="product.php?action=bewerken&id={{ product.id }}" method="post">
        <div class="form-group">
            <label for="naam">Naam</label><input class="form-control" name="naam" id="naam" type="text" value="{{ product.naam }}" required>
        </div>
        <div class="form-group">
            <label for="prijs">Prijs</label><input class="form-control" name="prijs" id="prijs" type="text" value="{{ product.prijs }}" required>
        </div>
        <div class="form-group">
            <label for="beginDatum">Begin beschikbaarheid</label><input class="form-control" name="beginDatum"
                                                                        id="beginDatum" type="date" value="{{ product.beginDatum }}" required>
        </div>
        <div class="form-group">
            <label for="eindDatum">Einde beschikbaarheid</label><input class="form-control" name="eindDatum"
                                                                       id="eindDatum" type="date" value="{{ product.eindDatum }}" required>
        </div>
        <div class="form-group">
            <label for="promoKorting">Promotie korting </label><input class="form-control" name="promoKorting"
                                                                      id="promoKorting" type="text" value="{{ product.promoKorting }}" required>
        </div>
        <div class="form-group">
            <label for="omschrijving">Omschrijving</label><textarea class="form-control" name="omschrijving"
                                                                    id="omschrijving"> {{ product.omschrijving }}</textarea>
        </div>
        <div class="checkbox">
            <label><input type="checkbox" name="extra" value="ja"
                        {% if product.extra == 1 %}
                            checked
                        {% endif %}
                > Extra ingredient</label>
        </div>
        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="Wijzigen">

            <a href="beheerder.php?p=p">Annuleren</a>
        </div>
    </form>
{% endblock %}